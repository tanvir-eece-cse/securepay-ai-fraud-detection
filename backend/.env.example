# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
DEBUG=true
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-min-64-chars
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/securepay
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,securepay.com.bd

# ML Service
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_TIMEOUT=30

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# SMS (Optional - Bangladesh SMS Gateway)
SMS_API_URL=
SMS_API_KEY=

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true

# Transaction Limits (BDT)
MAX_TRANSACTION_AMOUNT=500000
DAILY_TRANSACTION_LIMIT=1000000

# Fraud Detection Thresholds
FRAUD_SCORE_THRESHOLD_HIGH=0.8
FRAUD_SCORE_THRESHOLD_MEDIUM=0.5
FRAUD_SCORE_THRESHOLD_LOW=0.3
