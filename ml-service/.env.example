# ML Service Environment Configuration
# Copy this file to .env and fill in the values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Model Configuration
MODEL_DIR=/app/models
MODEL_VERSION=1.0.0

# Feature Engineering
MAX_TRANSACTION_AMOUNT=500000
FRAUD_THRESHOLD_HIGH=0.8
FRAUD_THRESHOLD_MEDIUM=0.5
FRAUD_THRESHOLD_LOW=0.3

# Model Weights (for ensemble)
RF_WEIGHT=0.35
XGB_WEIGHT=0.40
NN_WEIGHT=0.25

# MLflow (optional)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=securepay-fraud-detection

# Performance Settings
MAX_BATCH_SIZE=100
PREDICTION_TIMEOUT=5.0
